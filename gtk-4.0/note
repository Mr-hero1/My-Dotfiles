@define-color headerbar_backdrop_color #000000;
@define-color headerbar_shade_color RGB(0 0 6/36%);
@define-color headerbar_darker_shade_color RGB(0 0 12/90%);

/* Consistent Sidebar Colors - Backgrounds set to #000000 */
