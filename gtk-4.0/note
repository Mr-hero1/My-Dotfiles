/* Added general selection and focus colors to ensure broader application of accent */
@define-color selected_bg_color @accent_bg_color;
@define-color selected_fg_color @accent_fg_color;
@define-color focus_color @accent_bg_color; /* For focus rings */
@define-color progress_bar_bg_color @accent_bg_color; /* For progress bars */
@define-color highlight_bg_color @accent_bg_color; /* General highlight background */
@define-color highlight_fg_color @accent_fg_color;

/* General GTK widget styling for accent color */
.accent {
    background-color: @accent_bg_color;
    color: @accent_fg_color;
}

/* Progress bars */
progressbar trough {
    background-color: alpha(@accent_bg_color, 0.2);
}
progressbar progress {
    background-color: @accent_bg_color;
}

/* Sliders/Scales (like in pavucontrol) */
scale trough {
    background-color: alpha(@accent_bg_color, 0.2);
}
scale highlight, scale slider {
    background-color: @accent_bg_color;
    border-color: @accent_bg_color; /* Ensure border also matches */
}
scale marks {
    color: @accent_bg_color;
}

/* Level bars */
levelbar trough {
    background-color: alpha(@accent_bg_color, 0.2);
}
levelbar block {
    background-color: @accent_bg_color;
}

/* Selected states in lists/trees (like pavucontrol output/input devices) */
.view:selected,
.view:selected:focus,
.view:selected:hover {
    background-color: @accent_bg_color;
    color: @accent_fg_color;
}

row:selected,
row:selected:focus,
row:selected:hover {
    background-color: @accent_bg_color;
    color: @accent_fg_color;
}

list row:selected,
list row:selected:focus,
list row:selected:hover,
flowbox flowboxchild:selected,
flowbox flowboxchild:selected:focus,
flowbox flowboxchild:selected:hover,
grid row:selected,
grid row:selected:focus,
grid row:selected:hover,
grid column:selected,
grid column:selected:focus,
grid column:selected:hover {
    background-color: @accent_bg_color;
    color: @accent_fg_color;
}

/* Buttons and toggles */
button
button.flat:hover,
button.flat:active,
button.flat:focus,
button.suggested-action,
button.suggested-action:hover,
button.suggested-action:active,
button.suggested-action:focus {
    background-color: @accent_bg_color;
    color: @accent_fg_color;
}

/* Comprehensive styling for switch widget */
switch {
    /* General styling for the switch itself */
    background-image: none; /* Remove any default background images */
    border: none; /* Remove default borders */
}

switch trough {
    background-color: alpha(@accent_bg_color, 0.3); /* Lighter accent for the track */
    border-radius: 100px; /* Make it rounded */
}

switch slider {
    background-color: @accent_bg_color; /* Accent for the thumb */
    border-color: @accent_bg_color; /* Ensure border matches */
    box-shadow: none; /* Remove any default shadows */
}

/* Styling for the checked state of the switch */
switch:checked {
    background-color: @accent_bg_color; /* The switch itself when checked */
}

switch:checked trough {
    background-color: @accent_bg_color; /* Ensure the track is fully accented when checked */
}

switch:checked slider {
    background-color: @accent_fg_color; /* Thumb color when switch is ON (e.g., white) */
    border-color: @accent_fg_color;
}


checkbutton:checked,
radiobutton:checked {
    background-image: none;
    background-color: @accent_bg_color;
    border-color: @accent_bg_color;
    color: @accent_fg_color;
}

:root {
    --standalone-color-oklab: max(l, 0.85) a b;
    --accent-color: oklab(from var(--accent-bg-color) var(--standalone-color-oklab));
    --destructive-color: oklab(from var(--destructive_bg_color) var(--standalone-color-oklab));
    --success-color: oklab(from var(--success_bg_color) var(--standalone-color-oklab));
    --warning-color: oklab(from var(--warning_bg_color) var(--standalone-color-oklab));
    --error-color: oklab(from var(--error_bg_color) var(--standalone-color-oklab));
    --active-toggle-bg-color: oklab(from var(--accent-bg-color) l a b / 0.2); /* Accent color for active toggle */
    --active-toggle-fg-color: #ffffff;
    --overview-bg-color: #000000; /* Changed to pure black */
    --overview-fg-color: #ffffff;

    /* Added root variables for general selection and focus colors */
    --selected-bg-color: var(--accent-bg-color);
    --selected-fg-color: var(--accent-fg-color);
    --focus-color: var(--accent-bg-color);
    --progress-bar-bg-color: var(--accent-bg-color);
    --highlight-bg-color: var(--accent-bg-color);
    --highlight-fg-color: var(--accent-fg-color);
}



