(defwidget workspace-widget []
  (box
    :orientation "v"
    :halign "start"
    :valign "start"
    (label :xalign 0 :markup current_workspace)))

    (defpoll current_workspace
    :interval "0.2s"
    "hyprctl activeworkspace | grep 'workspace ID' | awk '{print $3}'")

(defwindow workspace-widget
  :window_type "dock"
  :monitor 0
  :stacking "fg"
  :input_passthrough true
  :geometry (geometry :x "1px" :y "-2px" :width "0px" :anchor "top left")
  (workspace-widget))
